{
  "env": {
    "node": true,
    "es2021": true,
    "browser": true
  },
  "globals": {
    "React": true
  },
  "extends": [
    "airbnb",
    "standard-with-typescript",
    "next/typescript",
    "eslint:recommended",
    "next/core-web-vitals"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-shadow": "off",
    "arrow-body-style": "off",
    "import/extensions": "off",
    "curly": [
      "error",
      "multi"
    ],
    "react/button-has-type": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": "off",
    "import/prefer-default-export": "warn",
    "semi": 0, // let it handle by prettier
    "react/function-component-definition": "off",
    "indent": "error", // let it handle by prettier
    "max-len": "error", // let it handle by prettier
    "comma-dangle": "error", // let it handle by prettier
    "no-redeclare": "error", // let it handle by TypeScript
    "react/jsx-indent": "error", // let it handle by prettier
    "no-unused-vars": "error", // let it handle by TypeScript
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "operator-linebreak": "error", // let it handle by prettier
    "object-curly-newline": "error", // let it handle by prettier
    "function-paren-newline": "error", // let it handle by prettier
    "implicit-arrow-linebreak": "error", // let it handle by prettier
    "react/require-default-props": "error", // let it handle by TypeScript
    "nonblock-statement-body-position": "error", // let it handle by prettier
    "react/jsx-one-expression-per-line": "error", // let it handle by prettier
    "@typescript-eslint/no-explicit-any": "error",
    "no-use-before-define": [
      "off"
    ],
    "consistent-return": "off",
    "no-return-assign": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "react/no-unused-prop-types": "off"
  }
}